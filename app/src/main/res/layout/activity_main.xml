<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/win_by_myself"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#009688"
                    android:lineSpacingExtra="4sp"
                    android:lines="3"
                    android:text="@string/win_by_myself" />

                <TextView
                    android:id="@+id/count_win_by_myself"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/win_by_myself"
                    android:layout_alignEnd="@id/win_by_myself"
                    android:layout_marginTop="22dp"
                    android:elevation="10dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#BE000000"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/win_by_my_opponent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#9E837F7F"
                    android:lineSpacingExtra="4sp"
                    android:lines="3"
                    android:text="@string/win_by_my_opponent" />

                <TextView
                    android:id="@+id/count_win_by_my_opponent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/win_by_my_opponent"
                    android:layout_alignEnd="@id/win_by_my_opponent"
                    android:layout_marginTop="22dp"
                    android:elevation="10dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/aggressive_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14sp"

                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/lost_by_my_opponent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#9E837F7F"
                    android:lineSpacingExtra="4sp"
                    android:lines="3"
                    android:text="@string/lost_by_my_opponent" />

                <TextView
                    android:id="@+id/count_lost_by_my_opponent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/lost_by_my_opponent"
                    android:layout_alignEnd="@id/lost_by_my_opponent"
                    android:layout_marginTop="22dp"
                    android:elevation="10dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/lost_by_myself"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#EC8844"
                    android:lineSpacingExtra="4sp"
                    android:lines="3"
                    android:text="@string/lost_by_myself" />

                <TextView
                    android:id="@+id/count_lost_by_myself"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/lost_by_myself"
                    android:layout_alignEnd="@id/lost_by_myself"
                    android:layout_marginTop="22dp"
                    android:elevation="10dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/count_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:text="0 pt - 0 min"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/percent_win_by_myself_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible">

                <ProgressBar
                    android:id="@+id/percent_win_by_myself_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="#009688" />

                <TextView
                    android:id="@+id/percent_win_by_myself_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:text="100%"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/percent_lost_by_myself_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible">

                <ProgressBar
                    android:id="@+id/percent_lost_by_myself_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="#EC8844" />

                <TextView
                    android:id="@+id/percent_lost_by_myself_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/percent_winlost_by_my_opponent_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1">
                <ProgressBar
                    android:id="@+id/percent_winlost_by_my_opponent_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="#9E837F7F" />

                <TextView
                    android:id="@+id/percent_winlost_by_my_opponent_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </TableRow>
    </TableLayout>

</androidx.wear.widget.BoxInsetLayout>